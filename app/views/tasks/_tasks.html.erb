<ul class="media-list">
  <% tasks.each do |task| %>
    <li class="media">
      <div class="media-left">
        <img class="media-object img-rounded" src="<%= gravatar_url(task.user, options = { size: 50 }) %>" alt="">
      </div>
      <div class="media-body">
        <div>
          <%= link_to task.user.name, user_path(task.user) %> <span class="text-muted">posted at <%= task.created_at %></span>
        </div>
        <div>
          <p>タスク：<%= task.content %></p>
          <p>ステータス：<%= task.status %></p>
        </div>
        <div>
          <% if current_user == task.user %>
            <%# = link_to '一覧に戻る', tasks_path, class: 'btn btn-info btn-xs' %>
            <%# = link_to 'このタスクを編集する', edit_task_path(@task), class: 'btn btn-warning btn-xs' %>
            <%= link_to "達成", task, method: :delete, data: { confirm: "本当に解消できるんですか？" }, class: 'btn btn-danger btn-xs' %>
          <% end %>
        </div>
      </div>
    </li>
  <% end %>
  <%= paginate tasks %>
</ul>